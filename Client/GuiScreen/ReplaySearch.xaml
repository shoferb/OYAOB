<Window x:Class="Client.GuiScreen.ReplaySearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.GuiScreen"
        mc:Ignorable="d"
        Title="OYAOB - Texas Holdem Poker"  Height="532.278" Width="1156.745" Icon="/GuiScreen/Photos/Screen/icon.png">
    <Grid Margin="0,0,-3.6,-18">
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="257*"/>
            <ColumnDefinition Width="128*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/GuiScreen/Photos/Screen/pokerScreen2.png" />
        </Grid.Background>
        <Label x:Name="GameSearchMenuLabel" Content="Replay Search Menu" HorizontalAlignment="Left" Margin="196.6,35,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="25" Grid.Column="1"/>

        <Button x:Name="BBack" Content="Back" FontWeight="Bold" HorizontalAlignment="Left" Height="20" Margin="14,390,0,0" VerticalAlignment="Top" Width="49" Click="BBack_Click" Grid.Column="1"/>
        <TextBox x:Name="GameId_textBox" HorizontalAlignment="Left" Height="27" Margin="213,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" SpellCheck.IsEnabled="True"  Grid.Column="1"/>
        <Label Content="Enter Room ID Here:" HorizontalAlignment="Left" Margin="46,87,0,0" VerticalAlignment="Top" Width="186" Height="26" Grid.Column="1" Foreground="White" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="SearchB" FontWeight="Bold" Content="Search" HorizontalAlignment="Left" Height="26" Margin="408,87,0,0" VerticalAlignment="Top" Width="71" Click="SearchB_Click" Grid.Column="1"/>
        <ListView x:Name="results_ListView" Grid.Column="1" HorizontalAlignment="Left" Height="239" Margin="18,135,0,0" VerticalAlignment="Top" Width="1030" Grid.ColumnSpan="2">
            <ListView.View>

                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
