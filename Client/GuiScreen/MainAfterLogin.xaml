<Window x:Class="TexasHoldem.GuiScreen.MainAfterLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TexasHoldem.GuiScreen"
        mc:Ignorable="d"
        Title="OYAOB - Texas Holdem Poker" Height="451.279" Width="420.008" Icon="/GuiScreen/Photos/Screen/icon.png">
    <Grid Margin="0,0,-6.4,1.2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/GuiScreen/Photos/Screen/pokerScreen2.png" />
        </Grid.Background>
        <Label x:Name="LoginMenuLabel" Content="Welcome Back" HorizontalAlignment="Left" Margin="14,24,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="25" Height="49" Width="210"/>
        <Button x:Name="EditUserbutton" Content="Edit User Information" HorizontalAlignment="Left" Margin="55,186,0,0" VerticalAlignment="Top" Width="148"  Height="25" Click="EditUserbutton_Click"/>
        <Button x:Name="Logoututton" Content="LogOut" HorizontalAlignment="Left" Margin="55,224,0,0" VerticalAlignment="Top" Width="148"  Height="25" Click="Logoututton_Click"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Left" Margin="23,380,0,0" VerticalAlignment="Top" Width="75" Click="ExitButton_Click"/>
        <Button x:Name="GameSearchMenuutton" Content="Game Search Menu" HorizontalAlignment="Left" Margin="55,262,0,0" VerticalAlignment="Top" Width="148"  Height="25" Click="GameSearchMenuutton_Click"/>
        <Button x:Name="CreateNewRoom_Btn" Content="Create new Room" HorizontalAlignment="Left" Height="25" Margin="55,300,0,0" VerticalAlignment="Top" Width="148" Click="Button_Click"/>
        <Button x:Name="UserInfobButton" Content="User Information" HorizontalAlignment="Left" Margin="55,338,0,0" VerticalAlignment="Top" Width="148" Height="25" Click="UserInfobButton_Click"/>
        <Image x:Name="Avatar" HorizontalAlignment="Left" Height="134" Margin="253,39,0,0" VerticalAlignment="Top" Width="118"/>
        <Label x:Name="userName" Content="" HorizontalAlignment="Left" Margin="24,74,0,0" VerticalAlignment="Top" Foreground="Brown" FontWeight="Bold" FontSize="25" Height="49" Width="210"/>
        <Label x:Name="Money" Content="" HorizontalAlignment="Left" Margin="24,124,0,0" VerticalAlignment="Top" Foreground="Brown" FontWeight="Bold" FontSize="25" Height="49" Width="210"/>

    </Grid>
</Window>
